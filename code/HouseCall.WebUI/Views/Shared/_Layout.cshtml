<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fixit</title> <!--Application Tab Title-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!--Top Horizontal Banner-->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Fixit", "Index", "Home")</li>
                    <li>@Html.ActionLink("Bookings", "Bookings", "Bookings")</li>
                    <li>@Html.ActionLink("Services", "Services", "Services")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">INDUSTRIES:</li>
                            <li class="divider"></li>
                            <li><a href="#">Cleaning</a></li>
                            <li><a href="#">Handyman</a></li>
                            <li><a href="#">Plumbing</a></li>
                            <li><a href="#">Electrical</a></li>
                            <li><a href="#">Haulaway</a></li>
                            <li class="divider"></li>
                            <li class="dropdown-header"><a href="#"></a>COMING SOON:</li>
                            <li class="divider"></li>
                            <li class="disabled"><a href="#">HVAC</a></li>
                            <li class="disabled"><a href="#">Window Cleaning</a></li>
                            <li class="disabled"><a href="#">Carpet Cleaning</a></li>
                        </ul>
                    </li>
                    
                    <li>@Html.ActionLink("About", "About", "About")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Register","Register")"><span class="glyphicon glyphicon-user"></span> Signup</a></li>
                    <li><a href="@Url.Action("Login","Login")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Fixit</p> <!--Copyright/Year/App Name Footer on the Home page.-->
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
